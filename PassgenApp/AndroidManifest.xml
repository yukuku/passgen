	<uses-permission android:name="com.android.vending.BILLING"/>

	<application android:icon="@drawable/ic_launcher" android:name="yuku.infinitepassgen.App" android:theme="@style/Theme.Passgen" android:label="Infinite Password Generator" android:allowBackup="true">
