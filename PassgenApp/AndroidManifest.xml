		</activity>
		
		<activity android:name="yuku.infinitepassgen.ac.BookmarksActivity" android:label="Saved Keywords" android:theme="@style/Theme.Passgen.SemiTransparent" android:configChanges="orientation|keyboardHidden|screenSize"/>
		
